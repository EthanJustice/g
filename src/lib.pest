operation = _{ add | subtract | multiply | divide | divide_with_remainder | exponent | radical }
    add                   = { "+" }
    subtract              = { "-" }
    multiply              = { "*" }
    divide                = { "/" }
    divide_with_remainder = { "%" }
    exponent              = { "**" }
    radical               = { "*/*" }

number = { ASCII_DIGIT+ }

expression = { number ~ operation ~ number }